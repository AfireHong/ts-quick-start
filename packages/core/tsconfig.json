{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "logs",
    "**/*spec.ts",
    "**/*.proto",
  ],
}
